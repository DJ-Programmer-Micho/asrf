{
  "model": {
    "name": "facebook/wav2vec2-large-xlsr-53",
    "cache_dir": "./model/pretrained",
    "output_dir": "./model/finetuned",
    "tokenizer_type": "custom"
  },
  "dataset": {
    "original_data_path": "./dataset/original_data",
    "preprocessed_data_path": "./dataset/preprocessed_data",
    "vocab_path": "./dataset/vocab/vocab.json",
    "audio_column": "path",
    "transcript_column": "transcript",
    "sampling_rate": 16000,
    "max_duration_in_seconds": 20.0,
    "min_duration_in_seconds": 0.5
  },
  "training": {
    "learning_rate": 3e-4,
    "per_device_train_batch_size": 16,
    "per_device_eval_batch_size": 8,
    "gradient_accumulation_steps": 2,
    "num_train_epochs": 30,
    "warmup_steps": 1000,
    "logging_steps": 100,
    "save_steps": 1000,
    "eval_steps": 1000,
    "save_total_limit": 5,
    "evaluation_strategy": "steps",
    "load_best_model_at_end": true,
    "greater_is_better": false,
    "metric_for_best_model": "eval_wer",
    "fp16": true,
    "dataloader_num_workers": 4,
    "group_by_length": true,
    "length_column_name": "input_length",
    "remove_unused_columns": false
  },
  "data_collator": {
    "pad_to_multiple_of": 8,
    "padding": true
  },
  "optimizer": {
    "name": "adamw_torch",
    "weight_decay": 0.005
  },
  "scheduler": {
    "name": "linear",
    "warmup_ratio": 0.1
  },
  "wandb": {
    "project": "asrf",
    "entity": null,
    "run_name": null
  }
}